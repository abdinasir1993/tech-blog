{{#if isLoggedIn }}
  {{> privateNavbar }}
{{else}}
  {{> publicNavbar }}
{{/if}}

<section
      class="mb-5"
 style="
        background-image: url('https://static.storyweaver.org.in/illustrations/58816/large/3.jpg');
        background-repeat: no-repeat;
        background-size: cover;
      " >
    >
      <h4 class="mb-5 text-center">
        <strong> CREATE YOUR BLOG</strong>
      </h4>

      <div class="row d-flex justify-content-center mt-5">
        <div class="col-md-6">
          <form id="create-blog-form">
            <div class="form-outline mb-4">
              <input type="file" id="cover-image" class="form-control" />
              <label class="form-label mt-2" for="form3Example1cg"
                >COVER IMAGE</label
              >
            </div>

            <div class="form-outline mb-4">
              <textarea
                class="form-control"
                id="blog-title"
                rows="4"
                style="height: 55px"
              ></textarea>
              <label class="form-label mt-2" for="form3Example1cg"
                >BLOG TITLE</label
              >
            </div>

            <div class="form-outline mb-4">
              <textarea
                class="form-control"
                id="blog-description"
                rows="4"
                style="height: 55px"
              ></textarea>
              <label class="form-label" for="form3Example3cg"
                >BLOG DESCRIPTION</label
              >
            </div>

                  <div class="form-outline mb-4">
              <textarea
                class="form-control"
                id="blog-text1"
                rows="4"
                style="height: 250px"
              ></textarea>
              <label class="form-label" for="form3Example3cg"
                >BLOG DESCRIPTION</label
              >
            </div>

            <div class="d-flex justify-content-center">
              <button
                type="submit"
                class="btn btn-info btn-block btn-lg gradient-custom-4 text-body"
               
              >
                PUBLISH
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>